<%= form_for :item, :url => {action:'create'} do |f|%>
<p>
	<%=f.label :name %>
	<%=f.text_field :name, :size => 20%>
</p>
<p>
	<%=f.label :price %>
	<%=f.text_field :price, :size => 5%>
</p>
<p>
	<%= f.label :bid%>
	<%=f.text_field :bid, :size => 5 %>
</p>
<p>
	<%=f.label :description %> <br />
	<%=f.text_area :description, :rows => 5, :cols => 20 %>
</p>
<p><%=f.submit 'Put up for Sale'%></p>
<%end%>